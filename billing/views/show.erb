<strong>Balance:</strong> <%= Transaction.employee_balance("today", account.public_id).to_i %>

<table class="table align-middle mt-3">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Account type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% transactions.each do |t| %>
      <tr>
        <td><%= t.performed_at %></td>
        <td><%= t.type %></td>
        <td><%= t.account_type %></td>
        <td><%= t.amount.to_i %></td>
      </tr>
    <% end %>
  </tbody>
</table>
